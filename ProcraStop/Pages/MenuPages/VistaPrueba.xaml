<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProcraStop.Pages.MenuPages.VistaPrueba"
             SafeAreaEdges="Container"
             Title="VistaPrueba">
    <CollectionView x:Name="PostCollection"
                    BackgroundColor="{StaticResource Gray100}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid RowDefinitions="Auto, Auto, Auto, Auto"
                      RowSpacing="10">
                    <Grid Grid.Row="0"
                          Margin="10,10, 0,0"
                          ColumnDefinitions="Auto,*,Auto">
                        <Border WidthRequest="50"
                                HeightRequest="50"
                                Grid.Column="0"
                                StrokeThickness="2"
                                Stroke="DarkBlue">
                            <Border.StrokeShape >
                                <RoundRectangle CornerRadius="25"/>
                            </Border.StrokeShape>
                            <Image Source="{Binding ProfileImage}"
                                   Aspect="AspectFill"/>
                        </Border>

                        <Grid Grid.Column="1"
                              Margin="10,0,0,0"
                              ColumnDefinitions="Auto,Auto"
                              RowDefinitions="auto,auto,*">

                            <Label Text="{Binding Title}"
                                   TextColor="{StaticResource Gray950}"
                                   Grid.ColumnSpan="2"
                                   HorizontalOptions="Start"
                                   FontAttributes="Bold"
                                   FontSize="16"/>
                            <HorizontalStackLayout Grid.Row="1"
                                       Grid.ColumnSpan="2"
                                       Spacing="0">

                                <Label Text="{Binding Time}"
                                       TextColor="{StaticResource Gray500}"
                                       VerticalOptions="Center"/>
                                <Label FontFamily="Icons"
                                       VerticalOptions="Center"
                                       Text="&#xe80b;"
                                       FontSize="18"
                                       Margin="8,0,0,0"/>
                            </HorizontalStackLayout>

                        </Grid>


                        <Button Grid.Column="2"
                                CornerRadius="22"
                                Padding="0"
                                VerticalOptions="Start"
                                BackgroundColor="Transparent">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="Icons"
                                                 Size="25"
                                                 Color="{StaticResource Gray500}"
                                                 Glyph="&#xe5d3;"/>
                            </Button.ImageSource>
                        </Button>

                    </Grid>

                    <Label Grid.Row="1"
                           HorizontalOptions="Start"
                           Text="{Binding Description}"
                           Style="{StaticResource Headline}"
                           FontSize="16"/>

                    <Image Grid.Row="2"
                           Source="{Binding PostImage}"/>

                    <Grid Grid.Row="3"
                          ColumnDefinitions="Auto,*,Auto">
                        <HorizontalStackLayout Grid.Column="0"
                                               Spacing="0">
                            <Button BackgroundColor="Transparent"
                                    CornerRadius="22"
                                    Padding="0">
                                <Button.ImageSource>
                                    <FontImageSource FontFamily="Iconos"
                                                     Size="20"
                                                     Color="DarkBlue"
                                                     Glyph="&#xe8dc;"/>
                                </Button.ImageSource>
                            </Button>

                            <Label Text="{Binding Comments}" VerticalOptions="Center"/>

                            <Button BackgroundColor="Transparent"
                                    CornerRadius="22"
                                    Padding="0">
                                <Button.ImageSource>
                                    <FontImageSource FontFamily="Icons"
                                                     Size="20"
                                                     Color="{StaticResource Gray600}"
                                                     Glyph="&#xe253;"/>
                                </Button.ImageSource>
                            </Button>

                            <Label Text="{Binding Shares}" 
                                   VerticalOptions="Center"/>

                            <Button BackgroundColor="Transparent" 
                                    CornerRadius="22"
                                    Padding="0">
                                <Button.ImageSource>
                                    <FontImageSource FontFamily="Icons"
                                                     Size="20"
                                                     Color="{StaticResource Gray600}"
                                                     Glyph="&#xe80d;"/>
                                </Button.ImageSource>
                            </Button>

                            <Label Text="2" 
                                   VerticalOptions="Center"/>

                        </HorizontalStackLayout>
                        <Label Grid.Column="2"
                               Text="ðŸ˜„"
                               FontSize="20"
                               Margin="0,0,5,0"
                               VerticalOptions="Center"
                               HorizontalOptions="End"/>
                    </Grid>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>